@model FAQ

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2 text-center">Edit New FAQ</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                <input asp-for="Id" hidden />

                <div class="row">
                    <div class="col-10">
                        <div class="border p-3">
                            <div asp-validation-summary="All"></div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Answer" class="form-control border-0 shadow" />
                                <label asp-for="Answer" class="ms-2"></label>
                                <span asp-validation-for="Answer" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Question" class="form-control border-0 shadow" />
                                <label asp-for="Question" class="ms-2"></label>
                                <span asp-validation-for="Question" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="heading" class="form-control border-0 shadow" />
                                <label asp-for="heading" class="ms-2"></label>
                                <span asp-validation-for="heading" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="collapse" class="form-control border-0 shadow" />
                                <label asp-for="collapse" class="ms-2"></label>
                                <span asp-validation-for="collapse" class="text-danger"></span>
                            </div>

                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-danger form-control">Create</button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="FAQ" asp-action="Index" class="btn btn-warning  form-control">
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-2">
                        @*  <img src="@Model.ImageUrl"  style="border-radius:5px; border:1px solid #bbb9b9" />*@
                    </div>
                </div>




            </form>
        </div>
    </div>
</div>




@* _Validation for client side*@
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}








