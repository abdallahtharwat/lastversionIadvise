@model List<PackageContent>

<div class="container">

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2"> List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="PackageContent" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>  Create New package Content
                    </a>
                    <a asp-controller="package" asp-action="Index" class="btn btn-warning">
                        <i class="bi bi-backspace"></i> Back to Packages Page
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Package
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>@obj.Id</td>
                                <td>@obj.Title</td>
                                <th>@obj.package.Title   </th>
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="PackageContent" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="PackageContent" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>