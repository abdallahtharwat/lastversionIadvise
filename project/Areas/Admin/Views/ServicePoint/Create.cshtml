@model ServiceVM
<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Create Service Point</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                <div class="border p-3">
                    <div asp-validation-summary="All"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="servicepointfeature.Title" class="form-control border-0 shadow" />
                        <label asp-for="servicepointfeature.Title" class="ms-2"></label>
                        <span asp-validation-for="servicepointfeature.Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="servicepointfeature.Description" class="form-control border-0 shadow" />
                        <label asp-for="servicepointfeature.Description" class="ms-2"></label>
                        <span asp-validation-for="servicepointfeature.Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="servicepointfeature.Icon" class="form-control border-0 shadow" />
                        <label asp-for="servicepointfeature.Icon" class="ms-2"></label>
                        <span asp-validation-for="servicepointfeature.Icon" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="@Model.servicepointfeature.iconserviceId" asp-items="@Model.iconserviceList" class="form-select border-0 shadow">
                            <option disabled selected> -- Select Service --</option>

                        </select>
                        <label asp-for="servicepointfeature.iconserviceId" class="ms-2"></label>
                        <span asp-validation-for="servicepointfeature.iconserviceId" class="text-danger"></span>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger form-control">Create</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="ServicePoint" asp-action="Index" class="btn btn-warning  form-control">
                                Back to List
                            </a>
                        </div>
                    </div>


                </div>
            </form>
        </div>
    </div>
</div>




@* _Validation for client side*@
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}







