@model testimonial

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Create Feedback</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row" enctype="multipart/form-data">


                <div class="row">
                    <div class="col-10">
                        <div class="border p-3">
                            <div asp-validation-summary="All"></div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Name" class="form-control border-0 shadow" />
                                <label asp-for="Name" class="ms-2"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Feedback" class="form-control border-0 shadow" />
                                <label asp-for="Feedback" class="ms-2"></label>
                                <span asp-validation-for="Feedback" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input type="file"  onchange="loadFile(event)" name="file" class="form-control border-0 shadow" />
                              @*  <img id="myImg" height="200" />*@
                                <label asp-for="img " class="ms-2"></label>

                            </div>


                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-danger form-control">Create</button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="testimonial" asp-action="Index" class="btn btn-warning  form-control">
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-2">
                        <img id="myImg" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                </div>




            </form>
        </div>
    </div>
</div>




@* _Validation for client side*@
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        var loadFile = function(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>


}







