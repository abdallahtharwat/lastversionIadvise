<section class="faq text-center" id="FQA">
    <div class="container">
        <h1>Frequently Asked Questions</h1>
        <hr>
        <p class="lead">Here You Will Find All Questions You Are Searching For And The Full Knowledgebase</p>
    </div>
    <br />
    <br />

    <!-- End FAQ Intro -->

    <div class="container">

        <div class="accordion" id="accordionExample">
            @foreach (var obj in Model.FAQs)
            {
            <div class="accordion-item">
                <h2 class="accordion-header" id="@obj.heading">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@obj.collapse" aria-expanded="true" aria-controls="@obj.collapse">
                       @obj.Answer
                        
                    </button>
                </h2>
                    <div id="@obj.collapse" class="accordion-collapse collapse show" aria-labelledby="@obj.heading" data-bs-parent="#accordionExample">
                    <div class="accordion-body text-black">

                       @obj.Question  
                                               
                    </div>

                </div>

            </div>
            }
        </div>
        
      
    </div>
    
</section>











